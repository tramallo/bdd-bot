{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "build",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": false
    },
    "include": ["src"],
    "exclude": ["**/*.spec.ts"]
}
