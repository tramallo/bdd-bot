{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "typeRoots": ["/src/**/*"],
        "baseUrl": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
